# Development Dockerfile for OmegaChat

FROM node:16-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY client/package*.json ./client/
COPY server/package*.json ./server/

# Install all dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose ports
EXPOSE 3000 8000

# Start both client and server in development mode
CMD ["npm", "run", "dev"]